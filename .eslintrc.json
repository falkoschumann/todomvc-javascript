{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "plugin:node/recommended-module"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "sort-imports": [
      "error",
      {
        "allowSeparatedGroups": true
      }
    ]
  }
}
